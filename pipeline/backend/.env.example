# Application
APP_NAME=FlexiRoaster
APP_VERSION=1.0.0
DEBUG=false

# API
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+psycopg2://airflow:airflow@localhost:5432/flexiroaster
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_EXECUTION_DB=1
REDIS_CACHE_DB=2

# Executor
EXECUTOR_DEFAULT_TIMEOUT=300
EXECUTOR_STAGE_TIMEOUT=120
EXECUTOR_MAX_RETRIES=3

# AI Safety
AI_RISK_THRESHOLD_HIGH=0.7
AI_RISK_THRESHOLD_MEDIUM=0.4
AI_BLOCK_HIGH_RISK=false
AI_ANOMALY_DETECTION_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Airflow
AIRFLOW_CALLBACK_SECRET=your-secret-here
