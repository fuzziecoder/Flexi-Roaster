# Environment variables for FlexiRoaster backend
APP_NAME=FlexiRoaster
APP_VERSION=1.0.0
DEBUG=True

# API Configuration
API_PREFIX=/api
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./flexiroaster.db

# Logging
LOG_LEVEL=INFO
LOG_REQUESTS=True
LOG_REQUEST_BODY=False
LOG_RESPONSE_BODY=False
# Comma-separated list of fields to redact from logs
SENSITIVE_FIELDS=password,token,secret,api_key,authorization,credit_card,ssn

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173
